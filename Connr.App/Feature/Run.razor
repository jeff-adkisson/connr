@{
    var parmListGroups = RunList!.Chunk(2);
    foreach (var parmListGroup in parmListGroups)
    {
        <MudGrid>
            @foreach (var parm in parmListGroup)
            {
                <MudItem xs="6">
                    <CommandRunner Command="@parm.Parameters.Command"
                                   Arguments="@(string.Join(" ", parm.Parameters.Arguments))"
                                   WorkingDirectory="@parm.Parameters.WorkingDirectory"
                                   Name="@parm.Parameters.Name"
                                   ProcessContainer="@parm.ProcessContainer"/>
                </MudItem>
            }
        </MudGrid>
    }
}