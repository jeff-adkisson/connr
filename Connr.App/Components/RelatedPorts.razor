@using Connr.Process
@if (IsVisible)
{
    var showKillProcess = ProcessState.IsRunning();

    <MudTable
        CustomHeader="true"
        Items=_relatedPorts
        Class="@Class"
        Dense="true"
        Bordered="true"
        Striped="true"
        FixedHeader="true"
        Outlined="true"
        Height="190px">
        <HeaderContent>
            <MudTHeadRow>
                @if (showKillProcess)
                {
                    <MudTh/>
                }
                <MudTh colspan="6">
                    <div class="d-flex justify-space-between align-center">
                        <MudText Typo="Typo.h6">
                            Related Ports: @((_relatedPorts?.Count ?? 0).ToString())
                        </MudText>
                        <div>
                            @if (ProcessState.IsRunning())
                            {
                                <MudTooltip Text="Refresh Related Ports">
                                    <MudIconButton
                                        Color="Color.Info"
                                        Icon="@Icons.Material.Filled.Refresh"
                                        OnClick="ShowRelatedPorts"/>
                                </MudTooltip>
                            }
                            <MudTooltip Text="Hide Related Ports">
                                <MudIconButton
                                    Color="Color.Default"
                                    Icon="@Icons.Material.Filled.Close"
                                    OnClick="Hide"/>
                            </MudTooltip>
                        </div>
                    </div>
                </MudTh>
            </MudTHeadRow>
            <MudTHeadRow>
                @if (showKillProcess)
                {
                    <MudTh/>
                }
                <MudTh>Process</MudTh>
                <MudTh>Port</MudTh>
                <MudTh>Address</MudTh>
                <MudTh>Protocol</MudTh>
                <MudTh>State</MudTh>
                <MudTh>Module</MudTh>
            </MudTHeadRow>
        </HeaderContent>
        <RowTemplate>
            @if (showKillProcess)
            {
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.StopCircle" Color="Color.Warning"
                                   OnClick="() => KillProcess(context.ProcessId)"
                                   Variant="Variant.Filled"/>
                </MudTd>
            }
            <MudTd>
                @context.ProcessId.ToString()
            </MudTd>
            <MudTd>
                @context.LocalPort.ToString()
            </MudTd>
            <MudTd>
                @context.LocalAddress
            </MudTd>
            <MudTd>
                @context.Protocol
            </MudTd>
            <MudTd>
                @context.State
            </MudTd>
            <MudTd>
                @context.ModuleName
            </MudTd>
        </RowTemplate>
    </MudTable>
}